function nprt_theme() {
   return array(
      'nprt_javascript' => array(
         'arguments' => array(),
      ),
      'nprt_stylesheet' => array(
         'arguments' => array(),
      ),
      'nprt_ajax' => array(
      		'template' => 'ajax',
      		'arguments' => array(
        		'content' => NULL,
      	),
      ),
      'tablesort_pager' => array(
      	'arguments'	=>	array()
      ),
   );   
}

function nprt_init() {
  theme('nprt_javascript');
  theme('nprt_stylesheet');
}

function theme_nprt_javascript() {
  drupal_add_js(drupal_get_path('module', 'nprt').'/js/jquery.tablesorter.min.js');
  drupal_add_js(drupal_get_path('module', 'nprt').'/js/jquery.tablesorter.pager.js');
  drupal_add_js(drupal_get_path('module', 'nprt').'/js/jquery.tablesorter.filter.js');
  drupal_add_js(drupal_get_path('module', 'nprt').'/js/nprt.js');
}

function theme_nprt_stylesheet() {
  drupal_add_css(drupal_get_path('module', 'nprt').'/css/nprt.css');
}

function theme_tablesort_pager(){
	$output  = '<div id="pager"  class="tablesortpager">';
	$output .= '<form>';
	$output .= '<div class="control">';
	$output .= '<div class="pagesize-wrapper">';
	$output .= '<label for="pagesize">'.t('Results per page').'</label>';
	$output .= '<select name="pagesize" class="pagesize">';
	$output .= '<option selected="selected"  value="25">25</option>';
	$output .= '<option value="30">30</option>';
	$output .= '<option value="40">40</option>';
	$output .= '<option  value="50">50</option>';
	$output .= '</select>';
	$output .= '</div>';
	$output .= '<a href="javascript:void(0);" class="first btn green"><span>&lsaquo;&lsaquo;</span></a>';
	$output .= '<a href="javascript:void(0);" class="prev btn green"><span>&lsaquo;</span></a>';
	$output .= '<a href="javascript:void(0);" class="next btn green"><span>&rsaquo;</span></a>';
	$output .= '<a href="javascript:void(0);" class="last btn green"><span>&rsaquo;&rsaquo;</span></a>';
	$output .= '</div>';
	$output .= '<label>'.t('Page').'</label><input id="pagedisplay" class="pagedisplay" type="text" />'.t('of').' <span class="pagecount"></span>';
	$output .= t('Search').'<input name="filter" id="filter-box" value="" maxlength="20" size="20" type="text">';
	$output .= '<a href="javascript:void(0);" id="filter-clear-button" class="btn green"><span>'.t('clear').'</span></a>';
	$output .= '</form>';
	$output .= '<div class="count"></div>';
	$output .= '</div>';
	return $output;
}